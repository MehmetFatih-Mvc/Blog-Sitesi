@model Content

@{
    Layout = "_Layout3";
}

<section id="contact" class="contact">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Contact</h2>
        </div>

        <div class="row mt-1">

          <div class="col-lg-4">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Adres:</h4>
                <p>Gaziantep / Şahinbey</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>mehmetfatihkaplan308@gmail.com</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Telefon:</h4>
                <p>+90 506 947 01 05</p>
              </div>

            </div>

          </div>

          <div class="col-lg-8 mt-5 mt-lg-0">

            <form action="CreateContent" method="post"  class="php-email-form">
              <div class="row">
                <div class="col-md-6 form-group">
                  <input asp-for="Name" placeholder="Your Name" class="form-control">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input asp-for="Email" class="form-control"  placeholder="Your Email" >
                </div>
              </div>
              <div class="form-group mt-3">
                <input  class="form-control" asp-for="Konu" placeholder="Subject" >
              </div>
              <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Açıklama" rows="5" placeholder="Message"></textarea>
              </div>
              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>
              <div class="text-center"><button type="submit">Send Message</button></div>
            </form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->

  </main>

